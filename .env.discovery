# DISCOVERY MODE SETTINGS
DISCOVERY_MODE=unconstrained
FILTER_FEATURES=false
JUDGE_IMPORTANCE=false
STORE_EVERYTHING=true

# SEQUENTIAL LEARNING
PROCESS_MODE=sequential
CURRENT_VIDEO=1
TOTAL_VIDEOS=1500
CHECKPOINT_FREQUENCY=1  # Save after every video

# EMERGENCE THRESHOLDS
MIN_CORRELATION_TO_LOG=0.7
PATTERN_CONFIDENCE_THRESHOLD=0.0  # Don't filter
UNKNOWN_SPACE_ALLOCATION=0.3  # 30% reserved for unknown

# PYTHON ML BRIDGE
ML_BRIDGE_HOST=localhost
ML_BRIDGE_PORT=8000
ML_BRIDGE_TIMEOUT=300

# FEATURE EXTRACTION
EXTRACT_FACE_LANDMARKS=468  # All of them
EXTRACT_BODY_POINTS=33      # All of them
EXTRACT_MICRO_EXPRESSIONS=43 # All AUs
EXTRACT_UNKNOWN=true         # Always leave room

# INTELLIGENCE STATE
CHECKPOINT_DIR=./intelligence_checkpoints
DISCOVERY_LOG_DIR=./data/discoveries
PATTERN_EVOLUTION_TRACKING=true

# LOCAL PROCESSING
USE_MLX=true
USE_WHISPER_CPP=true
USE_MEDIAPIPE=true
NO_EXTERNAL_APIS=true